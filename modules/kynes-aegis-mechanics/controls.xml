<GuiXml>
    <Controls>
        <Control name="ARSTest" resizeToFitDescendents="true" virtual="true" movable="true">
            <Controls>
                <Texture name="$(parent)AlertFrame" textureFile="/esoui/art/actionbar/abilityframe64_down.dds">
                    <Anchor point="CENTER" relativePoint="LEFT" relativeTo="ARSTest" />
                    <Dimensions x="50" y="50"/>
                </Texture>

                <Texture name="$(parent)AlertTexture" textureFile="esoui\art\actionbar\abilityframe64_up.dds">
                    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$(parent)AlertFrame" />
                    <Dimensions x="40" y="40"/>
                </Texture>

                <Label name="$(parent)AlertMessage" color="ffffff" font="ZoFontCenterScreenAnnounceSmall" horizontalAlignment="CENTER" verticalAlignment="CENTER" text="">
                    <Anchor offsetX="10" relativePoint="TOPRIGHT" relativeTo="$(parent)AlertTexture"/>
                </Label>

                <Label name="$(parent)AlertTimer" color="ffffff" font="ZoFontCenterScreenAnnounceSmall" horizontalAlignment="CENTER" verticalAlignment="CENTER" text="0">
                    <Anchor relativePoint="TOPRIGHT" offsetY="0" offsetX="10" relativeTo="$(parent)AlertMessage" />
                </Label>
            </Controls>
        </Control>
    </Controls>
</GuiXml>